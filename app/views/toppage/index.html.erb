	<script type="text/javascript">
   $(function(){
      // ▼マウスが載ったらサブメニューを表示
      $("#bar").mouseover(function(){
				 $("#title").hide();
				 $("#summary").hide();
         $("#button").hide();
         $(this).find(".header-right").fadeIn();     // 自分のサブメニューを表示する。
      });
      // ▼どこかがクリックされたらサブメニューを消す
