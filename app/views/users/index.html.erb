<head>
	<!-- ビューポートの設定 -->
	<meta name="viewport" content="width=device-width,initial-scale=1">
</head>

<body>
  <%= render partial: 'shared/header' %>

	<div class="recommend">
		<div class="recommend1">
      <p class="recommend2">最近更新したユーザー（友達を見つけたらクリックしてレビューページに進みましょう！）</p>
		</div>
    <div class="recommend3">
      <% @recommends.each do |recommend| %>
			<p class="recommend4">
				<%= link_to user_path(recommend.id), style: 'text-decoration: none;' do %>
				  <% if recommend.username.blank? %>
						<%= recommend.nickname %>さん
					<% else %>
						<%= recommend.username %>さん
					<% end %>
				<% end %>
			</p>
			<% end %>
		</div>
	</div>

  <div class="user-list">
		<div class="user-all">
      <p class="recommend2">全てのユーザー</p>
		</div>
    <div class="user-list1">
      <% @users.each do |user| %>
      <% if current_user.id != user.id %>
      <p class="recommend4">
        <%= link_to user_path(user.id), style: 'text-decoration: none;' do %>
				  <% if user.username.blank? %>
          	<%= user.nickname %>さん
					<% else %>
						<%= user.username %>さん
					<% end %>
        <% end %>
      </p>
      <% end %>
      <% end %>
    </div>

  </div>



</body>
