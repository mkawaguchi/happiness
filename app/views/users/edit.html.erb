        <li>
          <%= link_to 'あなた宛のレビューと手紙を読む', receife_path(current_user.id), method: :get %>
        </li>
        <li>
          <%= link_to '友達をフォローする', edit_follow_path(current_user.id), method: :get %>
        </li>
        <li>
          <%= link_to 'アカウント情報の変更', edit_profile_path(current_user.id), method: :get %>
        </li>
      </ul>
