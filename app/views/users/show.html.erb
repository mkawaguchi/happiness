<head>
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
</head>
<body>
  <%= render partial: 'shared/header' %>
  <div class="user-show-name">
    <p><%= @user.nickname %>さん</p>
  </div>

  <% if @user.ratename1.blank? %>
  <div class="non-profile1">
    <div class="non-profile2">
      <p><%= @user.nickname %>さんはまだプロフィールを設定していません</p>
      <p><%= @user.nickname %>さんのプロフィール設定を待ちましょう！</p>
    </div>
    <div class="sorry1">
      <div class="sorry2">
      </div>
    </div>
  </div>
  <% elsif @user.messages.blank? %>
  <div class="first-comment">
    <p><%= @user.nickname %>さんへのレビューはまだありません</p>
    <P>あなたが最初のレビューを届けましょう！</P>
    <div class="users-show-button">
      <%= link_to "最初のレビューを届ける", new_user_message_path(@user.id),class: "logout1" %>
    </div>
  </div>
  <div class="face-down1">
    <div class="face-down2">
    </div>
  </div>
  <% else %>
  <div class="character-message">
    <div class="character1-message">
    </div>
  </div>
  <div class="users-show-button1">
    <%= link_to "あなたもレビューを届ける", new_user_message_path(@user.id), class:'choose-button11' %>
  </div>
  <div class="user-show-review">
    <div class="review-box">
      <div class="user-show-review1">
        レビュー　<%= @counts %>件
      </div>
    </div>

    <div class="user-show-review2">
      <div class="change-own-review0">
        <div class="review-number0">
          <span class="change-own-review">
            <%= @user.ratename1 %>
          </span>
          <span class="review-number">
            <%= @rate1 %>
          </span>
        </div>
        <div class="review-number0">
          <span class="change-own-review">
            <%= @user.ratename2 %>
          </span>
          <span class="review-number">
            <%= @rate2 %>
          </span>
        </div>
        <div class="review-number0">
          <span class="change-own-review">
            <%= @user.ratename3 %>
          </span>
          <span class="review-number">
            <%= @rate3 %>
          </span>
        </div>
      </div>
      <div class="change-own-review1">
        <div class="review-number0">
          <span class="change-own-review2">
            <%= @user.ratename4 %>
          </span>
          <span class="review-number">
            <%= @rate4 %>
          </span>
        </div>
        <div class="review-number0">
          <span class="change-own-review2">
            <%= @user.ratename5 %>
          </span>
          <span class="review-number">
            <%= @rate5 %>
          </span>
        </div>
      </div>
      <div class="change-own-page4">
        <span>
          <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
        </span>
        <span class="introduction2">
          つぶやき
        </span>
      </div>
      <div class="change-own-page3">
        <%= @user.introduction %>
      </div>
    </div>
  </div>


  <div class="past-comment">

    <div class="past-review">
      <i class="fa fa-envelope-o" aria-hidden="true"></i>
      <%= @user.nickname %>さんへの全ての手紙
    </div>
      <% @user.messages.order(created_at: :desc).each do |message| %>
      <div class="review-all">
        <div class="review-all1">
          <%= message.body1 %>
        </div>
        <div class="review-all2">
          <%= message.created_at.strftime("%Y年%m月%d日") %>
        </div>
      </div>
      <% end %>

    <% end %>
  </div>




</body>
