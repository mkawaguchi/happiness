<head>
	<!-- ビューポートの設定 -->
	<meta name="viewport" content="width=device-width,initial-scale=1">
</head>
<body>
<div class="my-header">
  <div class="login-title0">
    <span class="login-title">Happiness</span>
  </div>
</div>

<div class="login-login">
  <div class="login-login1">
    <h2>ログインする</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "original_css1", placeholder: "メールアドレス", autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, class: "original_css1", placeholder: "パスワード", autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "ログインする",class: "buttoncss_original1" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>

<div class="tutorial">
	<div class="tutorial-margin">
		<div class="tutorial0">
			<span class="character">
				<div class="character1">
				</div>
			</span>
			<span class="tutorial1">
				<h2>使い方は簡単！</h2>
			</span>
		</div>
		<div class="tutorial2">
			<span class="tutorial-num">
				1
			</span>
			<span class="tutorial-exp">
        レビューをもらう！
			</span>
		</div>
		<div class="tutorial-text">
      <p class="exp-top">レビューしてほしい項目を登録</p>
			<i class="fa fa-arrow-down fa-2x arrow"></i>
			<p class="exp-bottom">あとは待つだけ！</p>
		</div>
		<div class="tutorial2">
			<span class="tutorial-num">
				2
			</span>
			<span class="tutorial-exp">
				レビューを送る！
			</span>
		</div>
		<div class="tutorial-text">
      <p class="exp2-top">送りたい友だちを探す</p>
			<i class="fa fa-arrow-down fa-2x arrow"></i>
			<p class="exp2-bottom">項目ごとに<i class="fa fa-star"></i>５つで評価！（もちろん匿名です）</p>
		</div>
	</div>
</div>

<!-- <%= render 'shared/footer' %> -->

</body>
