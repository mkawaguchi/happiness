<div class="my-header">
  <div class="login-title0">
    <span class="login-title">Happiness</span>
  </div>
</div>

<div class="login-login">
  <div class="login-login1">
    <h2>ログインする</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "original_css1", placeholder: "メールアドレス", autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, class: "original_css1", placeholder: "パスワード", autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "ログインする",class: "buttoncss_original1" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
